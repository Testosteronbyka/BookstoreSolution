<ul class="navbar-nav">
    @if (Context.Session.GetString("IsLoggedIn") == "true")
    {
        <li class="nav-item">
            <span class="navbar-text me-3">Witaj, @Context.Session.GetString("UserEmail")!</span>
        </li>
        <li class="nav-item">
            <form class="d-inline" asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-outline-secondary">Wyloguj</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">Zaloguj</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Zarejestruj</a>
        </li>
    }
</ul>